<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:layout_below="@+id/layout_First"
        android:background="@drawable/drawable_layout_login"
        android:orientation="vertical"
        android:weightSum="3">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_TitleSpend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/img_money_icon"
                    android:drawableStart="@drawable/img_money_icon"
                    android:hint="@string/t_n_chi_ti_u"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_MoneySpend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/img_money_item_1"
                    android:drawableStart="@drawable/img_money_item_1"
                    android:hint="@string/ti_n_chi_ti_u"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:gravity="center|top">

            <Button
                android:id="@+id/btn_Add"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/select_button"
                android:text="@string/th_m_chi_ti_u"
                android:textColor="#f7f3f3" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
