<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login"
    android:orientation="horizontal"
    android:weightSum="2"
    >
    <RelativeLayout
        android:layout_weight="0.2"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        >
        <Button
            android:id="@+id/btn_Previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:drawable/ic_menu_revert"
            android:onClick="btnSkipClick"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1.2"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_below="@+id/layout_First"
        android:background="@drawable/drawable_layout_login"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_Spend"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/welcome"
                android:src="@drawable/img_question"
                android:onClick="btnSelectorImage"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_TitleSpend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/img_money_icon"
                    android:drawableStart="@drawable/img_money_icon"
                    android:hint="@string/t_n_chi_ti_u"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_MoneySpend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/img_money_item_1"
                    android:drawableStart="@drawable/img_money_item_1"
                    android:hint="@string/ti_n_chi_ti_u"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_below="@+id/layout_First"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="right|top"
        android:layout_marginLeft="50dp"
        >

        <Button
            android:id="@+id/btn_Add"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/select_button"
            android:text="@string/th_m_chi_ti_u"
            android:textColor="@color/startblue" />
    </RelativeLayout>
</LinearLayout>
