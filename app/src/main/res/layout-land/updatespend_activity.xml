<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/btn_Previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:drawable/ic_menu_revert"
            android:onClick="btnSkipClick" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.5"
        android:background="@drawable/drawable_layout_login"
        android:orientation="vertical"
        android:weightSum="3.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            tools:ignore="NestedWeights">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_TitleSpend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/img_money_icon"
                    android:drawableStart="@drawable/img_money_icon"
                    android:hint="@string/t_n_chi_ti_u"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_MoneySpend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/img_money_item_1"
                    android:drawableStart="@drawable/img_money_item_1"
                    android:hint="@string/ti_n_chi_ti_u"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/txt_time"
                android:textColor="#f00"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:gravity="center|top">

            <Button
                android:id="@+id/btn_Update"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/select_button"
                android:text="@string/s_a_chi_ti_u"
                android:textColor="@color/startblue" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:gravity="center|top">

            <Button
                android:id="@+id/btn_Delete"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/select_button"
                android:text="@string/x_a_chi_ti_u"
                android:textColor="@color/startblue" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
